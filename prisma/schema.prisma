// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  email      String @unique
  firstName  String
  secondName String
  role       Role   @default(USER)
  skills    Skill[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skill {
   id          String    @id @default(uuid())
   title        String @unique
   skillers User[]
//   skillers User[] @relation(fields: [: [skillersIds], references: [id]])
//   skillersIds Int[]
 }

enum Role {
  USER
  SKILLER
  ADMIN
}
